<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GigChain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="incoming_gi">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="textView.Title.Poppins.Normal" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/newGigsTitleColor</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="textView.SubTitle" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/newGigsSubTitleColor</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TextViewLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Rounded.Card" parent="">
        <item name="contentPadding">6dp</item>
        <item name="android:width">@dimen/dp_35</item>
        <item name="android:height">@dimen/dp_35</item>
        <item name="android:shape">ring</item>
        <item name="cardCornerRadius">@dimen/dp_75</item>
        <item name="cardElevation">5dp</item>
        <item name="android:innerRadius">0dp</item>
    </style>

    <style name="List.Card" parent="">
        <item name="cardCornerRadius">@dimen/dp_15</item>
        <item name="cardElevation">@dimen/dp_5</item>
        <item name="android:height">@dimen/dp_35</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>