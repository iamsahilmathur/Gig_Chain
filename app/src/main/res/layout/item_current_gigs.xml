<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            style="@style/List.Card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:background="#4B48E1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_gigs_bg" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/g2"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent=".01"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView2"
                                style="@style/textView.Title.Poppins.Normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="Shop Onboarding"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                            </androidx.appcompat.widget.AppCompatTextView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textViewLocation"
                                style="@style/textView.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:drawableStart="@drawable/ic_location"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="Nehru Place"
                                app:layout_constraintStart_toEndOf="@id/g2"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView3"
                                style="@style/textView.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_5"
                                android:drawableStart="@drawable/time"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="11am-5pm"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textViewTime"
                                style="@style/textView.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_5"
                                android:drawableStart="@drawable/time"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="30 Mints"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/buttonDecline"
                                style="@style/textView.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:background="@drawable/proof_button_bg"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingEnd="@dimen/dp_20"
                                android:paddingBottom="@dimen/dp_2"
                                android:text="@string/proof"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toBottomOf="@+id/textViewTime">

                            </androidx.appcompat.widget.AppCompatTextView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/accept"
                                style="@style/textView.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:background="@drawable/accept_button_bg"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_2"
                                android:text="@string/start_gig"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/g2"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4">

                            </androidx.appcompat.widget.AppCompatTextView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView4"
                                style="@style/textView.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:drawableStart="@drawable/ic_money"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="500"
                                app:layout_constraintStart_toEndOf="@id/g2"
                                app:layout_constraintTop_toBottomOf="@+id/textViewLocation" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.45" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewCancel"
                        style="@style/textView.SubTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.35"
                        android:background="@drawable/cancel_button_bg"
                        android:drawableEnd="@drawable/ic_close"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView4"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4">

                    </androidx.appcompat.widget.AppCompatTextView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewAccept"
                        style="@style/textView.SubTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.65"
                        android:background="@drawable/accepted_button_bg"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/accepted"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView4"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4"></androidx.appcompat.widget.AppCompatTextView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>